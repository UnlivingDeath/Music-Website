<div class="container login-container">
  <div class="row justify-content-center align-items-center">
    <div id="login-column" class="col-md-6">
      <div id="login-box" class="col-md-12">
        <form id="registration-form" method="POST" action="/register">
          <h3 class="text-center text-info">Register new user @ Demo App</h3>
          <div class="form-floating mb-3 input-group has-validation">
            <input class="form-control" type="text" id="username" name="username" placeholder="Enter username" required>
            <label class="form-label" for="username">Username</label>
            <div class="invalid-feedback">Pick a username</div>
          </div>
          <div class="form-floating mb-3">
            <input class="form-control" type="password" id="password" name="password" placeholder="Enter your password" required>
            <label class="form-label" for="password">Password</label>
          </div>
          <div class="form-floating mb-3">
            <input class="form-control" type="text" id="name" name="name" placeholder="Enter your full name" required>
            <label class="form-label" for="name">Name</label>
          </div>
          <h4 class="text-info">Gender</h4>
          <div class="form-check">
            <input class="form-check-input" type="radio" id="male" name="gender" value="male">
            <label class="form-check-label" for="male">Male</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" id="female" name="gender" value="female">
            <label class="form-check-label" for="female">Female</label>
          </div>
          <input class="btn btn-primary" type="submit" value="Register">
        </form>
      </div>
    </div>
  </div>
</div>
